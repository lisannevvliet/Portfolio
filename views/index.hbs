<main class="home">
    <header>
        <h1><a href="{{user.url}}" target="_blank">{{user.name}}</a></h1>
        <p>{{user.bio}}</p>
    </header>

    <form id="form" action="/" method="post">
        <select id="filter" name="filter">
            <option value="all"{{#ifCond filter "all"}} selected{{/ifCond}}>All</option>
            <option value="mobile-development"{{#ifCond filter "mobile-development"}} selected{{/ifCond}}>Mobile Development</option>
            <option value="web-design-and-development"{{#ifCond filter "web-design-and-development"}} selected{{/ifCond}}>Web Design & Development</option>
        </select>
        <input type="submit" class="hide"></input>
    </form>
    
    <section>
        {{#each repositories}}
                <section>
                    <h3>{{name}}</h3>
                    {{#if description}}<p>{{description}}</p>{{/if}}
                    <span>
                        <a href="{{url}}" target="_blank"><img src="/images/github.png">GitHub</a>
                        {{#if homepageUrl}}<a href="{{homepageUrl}}" target="_blank"><img src="/images/desktop-monitor.png">Demo</a>{{/if}}
                    </span>
                </section>
        {{/each}}
    </section>
</main>